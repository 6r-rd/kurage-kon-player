---
import "../styles/global.css";

interface Props {
  title?: string;
  ogTitle?: string;
  ogImage?: string;
  ogDescription?: string;
}

const defaultTitle = "くらこんプレイヤー";
const defaultOgTitle = import.meta.env.PUBLIC_OG_TITLE || defaultTitle;
const defaultOgDescription =
  import.meta.env.PUBLIC_OG_DESCRIPTION || "配信で歌った曲名でアーカイブを検索";
const baseUrl = import.meta.env.BASE_URL || "/";
const normalizedBaseUrl = baseUrl.endsWith("/") ? baseUrl : `${baseUrl}/`;
const ogImageVersion = import.meta.env.PUBLIC_OG_IMAGE_VERSION || "20260128";
const defaultOgImage = `${normalizedBaseUrl}images/og-20260128.webp`;
const ogImageWidth = 4096;
const ogImageHeight = 2546;
const siteUrl = import.meta.env.PUBLIC_SITE_URL;
const normalizedSiteUrl = siteUrl
  ? siteUrl.endsWith("/")
    ? siteUrl
    : `${siteUrl}/`
  : undefined;

const {
  title = defaultTitle,
  ogTitle = defaultOgTitle,
  ogImage = defaultOgImage,
  ogDescription = defaultOgDescription,
} = Astro.props;
const versionedOgImage = ogImage.includes("?")
  ? ogImage
  : `${ogImage}?v=${ogImageVersion}`;
const resolvedOgImage = normalizedSiteUrl
  ? new URL(versionedOgImage, normalizedSiteUrl).toString()
  : versionedOgImage;
const resolvedOgUrl = normalizedSiteUrl
  ? new URL(Astro.url.pathname, normalizedSiteUrl).toString()
  : Astro.url.toString();
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href={`${import.meta.env.BASE_URL}/favicon.svg`}
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta property="og:title" content={ogTitle} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={resolvedOgUrl} />
    <meta property="og:description" content={ogDescription} />
    <meta property="og:image" content={resolvedOgImage} />
    <meta property="og:image:type" content="image/webp" />
    <meta property="og:image:width" content={ogImageWidth} />
    <meta property="og:image:height" content={ogImageHeight} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={ogTitle} />
    <meta name="twitter:description" content={ogDescription} />
    <meta name="twitter:image" content={resolvedOgImage} />
  </head>
  <body
    class="min-h-screen bg-gray-50 dark:bg-gray-900 overflow-x-hidden max-w-screen"
  >
    <div class="flex flex-col min-h-screen">
      <!-- Header -->
      <header
        class="h-16 sticky top-0 z-50 w-full border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60"
      >
        <div class="container flex h-full items-center justify-between">
          <div class="flex items-center gap-2 pl-4">
            <a href={import.meta.env.BASE_URL || "/"} class="text-xl font-bold"
              >くらこんプレイヤー</a
            >
          </div>
          <div class="flex items-center gap-4">
            <a
              href={`${import.meta.env.BASE_URL}/about/`}
              class="text-sm font-medium hover:underline">このサイトについて</a
            >
          </div>
        </div>
      </header>

      <!-- Main content -->
      <div class="flex flex-1 container w-full">
        <!-- Sidebar -->
        <aside
          class="relative w-0 overflow-hidden md:w-96 md:overflow-visible md:border-r md:pt-4 shrink-0"
        >
          <slot name="sidebar" />
        </aside>

        <!-- Main content area -->
        <main class="flex-1 p-4">
          <slot />
        </main>
      </div>
    </div>

    <!-- Additional scripts -->
    <slot name="scripts" />
  </body>
</html>
